{package_install_name, "op_panel"}.
{package_install_user, "op_panel"}.
{package_runner_user, "root"}.
{package_install_group, "onedata"}.
{package_install_user_desc, "Oneprovider panel user"}.
{package_shortdesc, "Oneprovider administration panel"}.
{package_desc, "The administration panel for oneprovider cluster providing storage resources, part of onedata project"}.
{package_commands, {list, [[{name, "op_panel"}], [{name, "op_panel_admin"}]]}}.
{package_patch_dir, "onedata-patches"}.
{bin_or_sbin, "sbin"}.

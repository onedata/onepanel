{rpm_depends,
    ", botan >= 1.10"
    ", sed"}.
{deb_depends,
    "libbotan (>= 1.10)"
    ", sed"}.
{rpm_build_depends,
   ", git"
   ", erlang-erl_interface >= 17.0"
   ", erlang-parsetools >= 17.0"
   ", erlang-eunit >= 17.0"
   ", erlang-xmerl >= 17.0"
   ", erlang-edoc >= 17.0"
   ", erlang-common_test >= 17.0"
   ", erlang-reltool >= 17.0"
   ", botan-devel"}.
{deb_build_depends,
    "git"
    ", erlang (>= 17.0)"
    ", erlang-src (>= 17.0)"
    ", libbotan1.10-dev"
    ", pkg-config"}.
{post_install_deb_script,
    "sed -i s/onepanel@127.0.0.1/onepanel@`hostname -f`/g /etc/op_panel/vm.args ; "
    "sed -i s/'-setcookie .*'/'-setcookie oneprovider_node'/g /etc/op_panel/vm.args ; "
    "/etc/init.d/op_panel start"}.
{post_install_rpm_script,
    "sed -i s/onepanel@127.0.0.1/onepanel@`hostname -f`/g /etc/op_panel/vm.args ; "
    "sed -i s/'-setcookie .*'/'-setcookie oneprovider_node'/g /etc/op_panel/vm.args ; "
    "/etc/init.d/op_panel start"}.
%% -*- mode: erlang -*-
%% ex: ft=erlang
{sys, [
    {lib_dirs, ["../deps"]},
    {erts, [{mod_cond, derived}, {app_file, strip}]},
    {app_file, strip},
    {rel, "op_onepanel", "1.0.0",
        [
            kernel,
            stdlib,
            sasl,
            crypto,
            inets,
            % All ctool deps will be included in the release package,
            % so there is no need to list them here.
            ctool,
            % n2o is a ctool dep, but it is not listed in ctool.app.src,
            % which requires this line to include it in the package (but not start it)
            {n2o, load},
            onepanel
        ]},
    {rel, "start_clean", "",
        [
            kernel,
            stdlib
        ]},
    {boot_rel, "op_onepanel"},
    {profile, embedded},
    {incl_cond, derived},
    {excl_archive_filters, [".*"]}, %% Do not archive built libs
    {excl_sys_filters, ["^bin/(?!start_clean.boot)",
        "^erts.*/bin/(dialyzer|typer)",
        "^erts.*/(doc|info|include|lib|man|src)"]},
    {excl_app_filters, ["\.gitignore"]},
    {app, onepanel, [{mod_cond, app}, {incl_cond, include}, {lib_dir, ".."}]}
]}.

{target_dir, "op_onepanel"}.

{overlay_vars, "vars.config"}.

{overlay, [
    {mkdir, "log/sasl"},

    %% Copy base files for starting and interacting w/ node
    {copy, "../deps/node_package/priv/base/erl", "{{erts_vsn}}/bin/erl"},
    {copy, "../deps/node_package/priv/base/nodetool", "{{erts_vsn}}/bin/nodetool"},
    {template, "../deps/node_package/priv/base/runner", "bin/op_onepanel"},
    {template, "../deps/node_package/priv/base/env.sh", "lib/env.sh"},
    {template, "scripts/op_onepanel_admin", "bin/op_onepanel_admin"},
    {copy, "scripts/op_onepanel_admin.escript", "lib/"},

    %% Copy config files
    {mkdir, "etc"},
    {template, "app.config", "etc/app.config"},
    {template, "../rel/files/vm.args", "etc/vm.args"},

    %% Copy additional data files
    {mkdir, "data"},
    {copy, "../src/gui_static", "data/"},
    {copy, "../certs", "data/"},
    {copy, "../LICENSE.txt", "data/"},

    %% Copy nif libs
    {copy, "../c_lib", "lib/"}
]}.
